// Creating and closing requests
// Unless you are unloading the extension or your plugin gets unloaded, you must close all handles yourself
native CurlHandle:Async_CurlNew(any userdata=0);
native void Async_Close(any handle);

// Starting requests
// Once your start a request all operations on them will fail until the callback fires
native void Async_CurlGet(CurlHandle:request, const char[] url, Async_CurlCallback f);
native void Async_CurlPost(CurlHandle:request, const char[] url, const char[] post, Async_CurlCallback:f);
native void Async_CurlPostRaw(CurlHandle:request, const char[] url, const char[] post, postsize, Async_CurlCallback:f);
// For use with advanced options
native void Async_CurlStart(CurlHandle:request, Async_CurlCallback f);

// Common functions
native void Async_CurlGetData(CurlHandle:request, char[] buffer, buffer_size);
// conveniently places a null byte at the end of the buffer
stock void Async_CurlGetDataString(CurlHandle:request, char[] buffer, buffer_size, size)
{
    Async_CurlGetData(request, buffer, buffer_size);
    if(buffer_size == 0)
        return;
    if(size < buffer_size) {
        buffer[size] = 0;
    } else {
        buffer[buffer_size-1] = 0;
    }
}
native Async_CurlAddHeader(CurlHandle:request, const char[] value);

